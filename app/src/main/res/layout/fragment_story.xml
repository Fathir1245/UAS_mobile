<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <!-- Header untuk judul cerita -->
    <TextView
        android:id="@+id/tv_cerita_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerita Anak"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/hahay"
        android:fontFamily="casual"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subheader untuk deskripsi cerita -->
    <TextView
        android:id="@+id/tv_cerita_subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nikmati berbagai cerita menarik untuk anak-anak!"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:textColor="@color/hahay"
        android:fontFamily="casual"
        app:layout_constraintTop_toBottomOf="@id/tv_cerita_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView untuk daftar cerita -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cerita"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        android:background="@color/hahay"
        app:layout_constraintTop_toBottomOf="@id/tv_cerita_subheader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
